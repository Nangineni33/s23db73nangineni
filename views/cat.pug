extends layout

block content
  - let cats  = results
  h1= title
  div(class="container-fluid")
  div(class="row m-1")
    each cat in cats 
      - let destination = `dispatch(\"/cat/update?id=${cat._id}\")`
      div(class="row-sm-2", class="m-1") cat #{cat.cat_name}(#{cat.cat_color}) is #{cat.cat_weight} 
        button.btn( class="btn-primary ml-1", onclick= destination) Update

  script.
    function dispatch(path){
      window.location.href=path
    }